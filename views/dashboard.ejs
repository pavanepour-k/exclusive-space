<!DOCTYPE html>
<html lang="<%= lang %>">
<head>
  <%- include('partials/head') %>
</head>
<body class="min-h-screen flex flex-col">
  <%- include('partials/nav') %>
  <main class="container mx-auto p-4 flex-1">
    <form action="/feed" method="post" class="mb-4 space-y-2">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <textarea name="content" class="w-full border p-2" placeholder="<%= t('post_placeholder') %>" required></textarea>
      <button class="bg-blue-600 text-white px-4 py-2"><%= t('share') %></button>
    </form>
    <div class="space-y-4">
      <% posts.forEach(p => { %>
        <div class="border p-2">
          <div class="font-bold"><%= p.author.displayName %></div>
          <div><%= p.content %></div>
          <div class="text-sm text-gray-500"><%= new Date(p.createdAt).toLocaleString() %></div>
        </div>
      <% }) %>
    </div>
  </main>
</body>
</html>